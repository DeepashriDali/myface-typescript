<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Posts</h1>
<ol>
    <% results.forEach(function(post) {%>
        <li>
            <p><%= post.message %></p> 
            <img src=<%= post.imageUrl %> alt = "Post Image" height = "150" width = "150" />
            <p>Id: <%= post.id %></p> 
            <p><b>Posted By:</b> <%= post.postedBy.name %> on <%= post.createdAt %></p> 
            <p><b>Likes:</b> <em><%= post.likedBy.length %></em> <b>Dislikes:</b><em><%= post.dislikedBy.length %></em>
            </p> 
        </li>
    <% }); %>
</ol>
    <%if (previous) { %>
    <a href="<%= previous %>">Previous</a>
    <% } %>
    <%if (next) { %>
        <a href="<%= next %>">Next</a>
    <% } %>
</body>
<%- include('_footer') -%>
</html>